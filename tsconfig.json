{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"target": "es2017",
		"outDir": "./dist",
		"lib": [
			"es6"
		],
		"resolveJsonModule": true,
		"types": [
			"node",
			"jest"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		// "strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/*.spec.(ts|js)",
		"dist"
	]
}